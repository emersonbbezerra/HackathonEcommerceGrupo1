generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  STAFF
  ADMIN
}

model User {
  id         String  @id @default(uuid())
  first_name String
  last_name  String
  email      String  @unique
  image      String?
  password   String
  phone      Int     @unique
  role       Role    @default(USER)

  sessions Session[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Session {
  id         String  @id @default(uuid())
  userId     String
  token      String?
  user_agent String?
  ip         String?
  active     Boolean @default(true)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([userId, token])
  @@map("sessions")
}
